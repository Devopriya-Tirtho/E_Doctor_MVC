@model IEnumerable<RegistrationUserMVC.Models.Calender>
@{
    ViewBag.Title = "Index";
}

<h2>Appointment Lists</h2>

@using (Html.BeginForm("Index", "SearchID", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />
}
<table class=" table table-striped">

    <thred>
        <tr>
            <th>AppointmentID</th>
            <th>Patient Name</th>
            <th>Doctor Name</th>
            <th>Department</th>
            <th>Appointment Date</th>
            <th>Appointment Time</th>
        </tr>

    </thred>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style=" color:red">
                    No Match Any Document


                </td>
            </tr>
        }

        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentID </td>
                    <td>@item.PatientName </td>
                    <td>@item.DoctorName </td>
                    <td>@item.Department </td>
                    <td>@item.AppointmentDate </td>
                    <td>@item.AppointmentTime </td>

                </tr>
            }
        }
    </tbody>

</table>
